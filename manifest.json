{
  "manifest_version": 3,
  "name": "Zoomme",
  "version": "1.0.0",
  "description": "Zoomme Chrome extension",
  "minimum_chrome_version": "116",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Zoomme"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["offscreen", "storage"]
}
